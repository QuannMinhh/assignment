<div class="container">
  <h1 class="text-center">Edit toys</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/toy/editToy/{{ toy._id }}" method="POST">
        <table class="table">
          <tr>
            <td>Toys name</td>
            <td>
              <input type="text" name="name" id="name" value="{{ toy.name }}" required>
            </td>
          </tr>
          <tr>
            <td>Brand</td>
            <td>
              <input type="text" name="brand" id="brand" value="{{ toy.brand }}" required>
            </td>
          </tr>
          <tr>
            <td>Category</td>
            <td>
              <input type="text" name="category" id="category" value="{{ toy.category }}" required>
            </td>
          </tr>
          <tr>
            <td>Published</td>
            <td>
              <input type="number" name="price" id="price" value="{{ toy.price }}" required>
            </td>
          </tr>
          <tr>
            <td>Quantity</td>
            <td>
              <input type="number" name="quantity" id="quantity" value="{{ toy.quantity }}" required>
            </td>
          </tr>
          <tr>
            <td>Picture</td>
            <td>
              <input type="text" name="picture" id="picture" value="{{ toy.picture }}" required>
            </td>
          </tr>
          <tr>
            <td>Picture</td>
            <td>
              <input type="describe" name="describe" id="describe" value="{{ toy.describe }}" required>
            </td>
          </tr>
        </table>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Update toys</button>
        </div>
      </form>
    </div>
  </div>
</div>
